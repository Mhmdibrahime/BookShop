@model PublisherVM

@{
    Layout = "_Dashboard";
    ViewData["Title"] = "Publisher";
    ViewData["TitleView"] = "Details Publisher";
}

<div class="col-lg-6">
    <div class="card p-4">
        <h3 class="mb-4 text-center">Publisher Details</h3>
        <form asp-action="Details" method="get">
            <div class="form-group">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" disabled />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Address" class="form-label">Address</label>
                <input asp-for="Address" class="form-control" disabled />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Phone" class="form-label">Phone</label>
                <input asp-for="Phone" class="form-control" disabled />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" disabled />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedAt" class="form-label">CreatedAt</label>
                <input type="datetime" asp-for="CreatedAt" class="form-control" disabled />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatedAt" class="form-label">UpdatedAt</label>
                <input type="datetime" asp-for="UpdatedAt" class="form-control" disabled />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between mt-4">
                <button asp-action="Index" class="btn btn-secondary">Back</button>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            </div>
        </form>
    </div>
</div>
