@model Entities.Domains.Book

@{
    ViewData["Title"] = "Book";
    ViewData["TitleView"] = "Details Book";

    Layout = "_Dashboard";
}

<div class="card shadow-lg">
    <div class="card-body">
        <div class="row">
            <!-- Book Image -->
            <div class="col-md-4 text-center">
                <img src="@Url.Content("~/covers/" + Model.Cover)" alt="Book Cover" class="img-thumbnail shadow-sm w-100 mb-3">
            </div>

            <!-- Book Details -->
            <div class="col-md-8">
                <h2 class="text-primary font-weight-bold mb-4">@Html.DisplayFor(model => model.Title)</h2>

                <!-- Description -->
                <p><strong>Description: </strong>@Html.DisplayFor(model => model.Description)</p>

                <!-- Published Year -->
                <p><strong>Published Year: </strong>@Html.DisplayFor(model => model.PublishedYear)</p>

                <!-- ISBN -->
                <p><i class="fas fa-barcode"></i> <strong>ISBN: </strong>@Html.DisplayFor(model => model.ISBN)</p>

                <!-- Sale Price -->
                <p><i class="fas fa-dollar-sign"></i> <strong>Sale Price: </strong>$@Html.DisplayFor(model => model.SalePrice)</p>

                <!-- Rent Price -->
                <p><i class="fas fa-hand-holding-usd"></i> <strong>Rent Price: </strong>$@Html.DisplayFor(model => model.RentPrice)</p>

                <!-- Stock -->
                <p><i class="fas fa-box"></i> <strong>Stock: </strong>@Html.DisplayFor(model => model.Stock)</p>

                <!-- Author -->
                <p><i class="fas fa-user"></i> <strong>Author: </strong>@Html.DisplayFor(model => model.Author.Name)</p>

                <!-- Publisher -->
                <p><i class="fas fa-building"></i> <strong>Publisher: </strong>@Html.DisplayFor(model => model.Publisher.Name)</p>

                <!-- Category -->
                <p><i class="fas fa-tags"></i> <strong>Category: </strong>@Html.DisplayFor(model => model.Category.Name)</p>

                <!-- Created Date -->
                <p><i class="fas fa-calendar-plus"></i> <strong>Created Date: </strong>@Html.DisplayFor(model => model.CreatedDate)</p>

                <!-- Modified Date -->
                <p><i class="fas fa-calendar-check"></i> <strong>Modified Date: </strong>@Html.DisplayFor(model => model.ModifiedDate)</p>
            </div>
        </div>
    </div>

    <div class="card-footer text-center">
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary mx-2 shadow-sm", @style = "min-width: 120px;" })
        <a asp-action="Index" class="btn btn-secondary mx-2 shadow-sm" style="min-width: 120px;">Back to List</a>
    </div>
</div>

<style>
    .card-body {
        padding: 2rem;
    }

    .card-footer {
        background-color: #f8f9fa;
        padding: 1.5rem;
    }

    h2 {
        color: #0056b3;
    }

    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transform: translateY(-2px);
        }
</style>



