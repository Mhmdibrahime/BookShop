@model AuthorVM

@{
    Layout = "_Dashboard";
    ViewData["Title"] = "Auhtor";
    ViewData["TitleView"] = "Details Auhtor";
}

<div class="col-lg-6 mx-auto">
    <div class="card p-4 shadow">
        <h3 class="mb-4 text-center">Author Details</h3>
        <form asp-action="Details" method="get">
            <div class="form-group">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" disabled />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" disabled rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="BirthDate" class="form-label">Birth Date</label>
                <input asp-for="BirthDate" class="form-control" type="date" disabled />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" disabled />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedAt" class="form-label">CreatedAt</label>
                <input type="datetime" asp-for="CreatedAt" class="form-control" disabled />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatedAt" class="form-label">UpdatedAt</label>
                <input type="datetime" asp-for="UpdatedAt" class="form-control" disabled />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between mt-4">
                <button asp-action="Index" class="btn btn-secondary">Back</button>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            </div>
        </form>
    </div>
</div>