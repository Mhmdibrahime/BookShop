@model AuthorCreateVM

@{
    Layout = "_Dashboard";
    ViewData["Title"] = "Auhtor";
    ViewData["TitleView"] = "Add Author";
}

<div class="col-lg-6 mx-auto">
    <form asp-action="Create" method="post">

        <div class="form-group mt-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" placeholder="Enter Description" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="BirthDate" class="form-label">Birth Date</label>
            <input asp-for="BirthDate" class="form-control" type="date" required />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" type="email" placeholder="Enter Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Create</button>
        </div>
    </form>
</div>
