@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<PurchaseVMV>
@{
    ViewData["Title"] = "Purchase";
    ViewData["TitleView"] = "View Purchases";

    Layout = "_Dashboard";
}
<div class="card-body p-0">
    <table class="table table-hover table-bordered text-center align-middle shadow-lg" style="background-color: #f9f9f9;">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Book Name</th>
                <th>Book Price</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th>Purchase Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-light">
                    <td>@item.UserName</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>@item.BookTitle</td>
                    <td>@item.BookPrice.ToString("C")</td>
                    <td>@item.PurchaseCount</td>
                    <td>@item.TotalPrice.ToString("C")</td>
                    <td>@item.PurchaseDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (item.Status == "Complete")
                        {
                            <span class="badge bg-success">Completed</span>
                        }
                        else if (item.Status == "Cancelled")
                        {
                            <span class="badge bg-danger">Cancelled</span>

                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">@item.Status</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-success btn-sm" href="/Admin/Purchase/Details/@item.Id">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-center mt-4">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { Page = page }),
            new PagedListRenderOptions
    {
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" }
    })
</div>
<!-- Custom Styles -->
<style>
    .table thead th {
        background-color: #343a40;
        color: #fff;
    }

    .table-hover tbody tr:hover {
        background-color: #e8f0fe; /* تغيير لون الصف عند التحويم */
        transition: background-color 0.3s ease;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #c82333;
            transform: scale(1.05); /* تأثير تكبير طفيف عند التحويم */
        }

    .badge {
        padding: 0.4em 0.7em;
        font-size: 0.9em;
        font-weight: 600;
    }

    .pagination {
        padding: 1em 0;
        margin-bottom: 0;
    }

        .pagination .page-item .page-link {
            border-radius: 50%;
            padding: 0.6em 1.2em;
            font-size: 1em;
            color: #333;
            border: 1px solid #ddd;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .pagination .page-item.active .page-link {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }

        .pagination .page-link:hover {
            background-color: #f8f9fa;
            color: #007bff;
            border-color: #007bff;
        }

        .pagination .page-item.disabled .page-link {
            color: #ddd;
        }

        .pagination .page-link:focus {
            outline: none;
        }

        .pagination .page-item:first-child .page-link,
        .pagination .page-item:last-child .page-link {
            border-radius: 30px;
        }

        .pagination .page-item:hover .page-link {
            background-color: #e9ecef;
            color: #007bff;
        }
</style>
