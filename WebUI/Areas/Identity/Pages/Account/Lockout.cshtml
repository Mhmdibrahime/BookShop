@page
@model LockoutModel
@{
    ViewData["Title"] = "Locked out";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Locked Out</title>
    <style>
        body {
            background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .alert-custom {
            background-color: white;
            border-left: 5px solid #ff4b2b;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
            max-width: 600px;
            text-align: center;
            transition: all 0.3s ease;
            animation: fadeIn 1s ease-out;
        }

            .alert-custom:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            }

            .alert-custom h1 {
                color: #ff416c;
                font-size: 3rem;
                margin-bottom: 15px;
            }

            .alert-custom p {
                color: #555;
                font-size: 1.2rem;
                margin-bottom: 30px;
            }

            .alert-custom .btn-primary {
                background-color: #ff4b2b;
                border: none;
                padding: 0.8rem 2.5rem;
                font-size: 1.2rem;
                border-radius: 50px;
                margin-top: 25px;
                transition: background-color 0.3s ease, transform 0.3s ease;
                color: white;
                text-decoration: none;
            }

                .alert-custom .btn-primary:hover {
                    background-color: #ff736b;
                    transform: translateY(-5px);
                }

            .alert-custom .lockout-icon {
                font-size: 5rem;
                color: #ff416c;
                margin-bottom: 20px;
                transition: transform 0.3s ease;
            }

                .alert-custom .lockout-icon:hover {
                    transform: rotate(10deg);
                }

        
    </style>

</head>
<body>
    <div class="alert-custom">
        <i class="bi bi-lock-fill lockout-icon"></i>
        <h1>@ViewData["Title"]</h1>
        <p>Your account has been locked due to multiple failed login attempts. Please try again later or contact support for further assistance.</p>
        <a href="/" class="btn btn-primary">
            Return to Home <i class="bi bi-house-door-fill"></i>
        </a>
    </div>
</body>
</html>
