@model string

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Error") ? "danger" : "success";
    var iconClass = Model.StartsWith("Error") ? "fa-times-circle" : "fa-check-circle";
    var alertTitle = Model.StartsWith("Error") ? "Error!" : "Success!";

    <style>
        .custom-alert {
            padding: 20px;
            border-radius: 8px;
            position: relative;
            margin-bottom: 20px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            font-family: 'Poppins', sans-serif;
        }

        .custom-alert-success {
            background-color: #d4edda;
            border-left: 6px solid #28a745;
            color: #155724;
        }

        .custom-alert-danger {
            background-color: #f8d7da;
            border-left: 6px solid #dc3545;
            color: #721c24;
        }

        .custom-alert .icon {
            font-size: 28px;
            margin-right: 15px;
        }

        .custom-alert .alert-title {
            font-weight: 700;
            font-size: 18px;
        }

        .custom-alert .alert-message {
            margin-left: 43px;
        }

        .custom-close-btn {
            position: absolute;
            top: 10px;
            right: 15px;
            background: none;
            border: none;
            color: #999;
            font-size: 20px;
            cursor: pointer;
            transition: color 0.3s ease;
        }

        .custom-close-btn:hover {
            color: #333;
        }

    </style>

    <div class="custom-alert custom-alert-@statusMessageClass">
        <i class="fas @iconClass icon"></i>
        <div class="alert-message">
            <span class="alert-title">@alertTitle</span>
            <p>@Model</p>
        </div>
        <button type="button" class="custom-close-btn" data-bs-dismiss="alert" aria-label="Close">&times;</button>
    </div>
}
