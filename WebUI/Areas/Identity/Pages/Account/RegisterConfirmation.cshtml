@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register Confirmation";
}

<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6" style="margin-bottom:50px">
                <div class="card mt-5 shadow-lg">
                    <div class="card-header text-center">
                        <h3 class="text-white">@ViewData["Title"]</h3>
                    </div>
                    <div class="card-body text-center">
                        <h4 class="mb-4">Email Confirmation Required</h4>
                        <p class="text-muted">
                            Please check your email to confirm your account. If you don't see the email, please check your spam folder.
                        </p>
                        <p>
                            <strong>If you didn't receive the email,</strong>
                            <a href="#" class="btn btn-link">click here to resend</a>.
                        </p>
                    </div>
                    <div class="card-footer text-center">
                        <a href="@Url.Page("Login")" class="btn btn-primary btn-lg">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Custom CSS -->
<style>
    body {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); /* Gradient background */
        font-family: 'Arial', sans-serif; /* Modern font */
    }

    .card {
        border-radius: 15px; /* Rounded corners */
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1); /* Enhanced shadow */
        overflow: hidden; /* Prevent overflow */
        border: 1px solid #ddd; /* Subtle border */
    }

    .card-header {
        background-color: #007bff; /* Primary color */
        color: white;
        padding: 20px;
        border-bottom: 2px solid #0056b3; /* Bottom border for emphasis */
    }

    .card-body h4 {
        font-weight: 700; /* Make the heading bold */
        color: #333; /* Darker color for text */
    }

    .text-muted {
        color: #6c757d; /* Subtle text color */
        font-size: 1.1rem; /* Slightly larger */
    }

    .btn-link {
        color: #007bff;
        text-decoration: underline;
    }

    .btn-link:hover {
        color: #0056b3;
        text-decoration: none;
    }

    .btn-primary {
        background-color: #007bff; /* Primary button color */
        border: none; /* Remove border */
        padding: 12px 25px; /* Add padding */
        border-radius: 25px; /* Rounded button */
        font-size: 16px; /* Increase font size */
        transition: background-color 0.3s ease, transform 0.2s; /* Smooth transition */
    }

    .btn-primary:hover {
        background-color: #0056b3; /* Darker shade on hover */
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.2); /* Shadow effect on hover */
        transform: translateY(-2px); /* Lift effect */
    }

    
</style>
