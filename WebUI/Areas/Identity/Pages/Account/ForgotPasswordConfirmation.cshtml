@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<style>
    /* خلفية خفيفة */
    body {
        background-color: #f0f2f5;
        min-height: 100vh;
        margin: 0;
    }
    /* تصميم البطاقة */
    .confirmation-card {
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        text-align: center;
        margin: 70px auto;
    }
    /* تصميم الأيقونة */
    .confirmation-icon {
        font-size: 3rem;
        color: #007bff;
        margin-bottom: 1rem;
    }
    /* تنسيق النص */
    h1 {
        font-size: 1.5rem;
        color: #333333;
        font-weight: bold;
    }
    p {
        font-size: 1rem;
        color: #555555;
        margin-top: 0.5rem;
    }
</style>

<div class="confirmation-card">
    <div class="confirmation-icon">📧</div>
    <h1>@ViewData["Title"]</h1>
    <p>
        Please check your email to reset your password.
    </p>
</div>
